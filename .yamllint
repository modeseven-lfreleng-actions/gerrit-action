extends: default

rules:
  empty-lines:
    max-end: 1
  comments:
    # prettier forces 1 space comment separator
    min-spaces-from-content: 1
    level: error
  line-length:
    # GitHub Actions often have long lines that cannot be broken
    max: 120
    level: warning
